<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/papel">


    <TextView
        android:id="@+id/protec_title"
        style="@style/etiquetas"
        android:layout_width="240dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:text="@string/listo"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlHardcoded" />

    <ImageView
        android:id="@+id/lapizVol"
        android:background="@color/colorAccentDark"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:onClick="cargarFormuModProtec"
        app:layout_constraintBottom_toBottomOf="@+id/task_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/task_delete"
        app:layout_constraintTop_toTopOf="@+id/task_delete"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@android:drawable/ic_menu_manage"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/task_delete"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:onClick="deleteProtectora"
        app:layout_constraintBottom_toBottomOf="@+id/protec_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/protec_title"
        app:layout_constraintTop_toTopOf="@+id/protec_title"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:contentDescription="@string/todo" />


</androidx.constraintlayout.widget.ConstraintLayout>